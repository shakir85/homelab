{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "description": "Renovate configuration for Terragrunt + Terraform modules",
  "enabledManagers": [
    "terraform",
    "regex"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "\\.hcl$"
      ],
      "matchStrings": [
        "source\\s*=\\s*\"git::(?<depName>https://github\\.com/(?<org>[^/]+)/(?<repo>[^/]+)\\.git)//(?<packageName>[^?]+)\\?ref=(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "git-tags",
      "versioningTemplate": "semver",
      "depNameTemplate": "github.com/{{org}}/{{repo}}//{{packageName}}",
      "extractVersionTemplate": "{{currentValue}}"
    }
  ],
  "hostRules": [
    {
      "matchHost": "github.com",
      "token": "{{ secrets.GITHUB_TOKEN }}"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "git-tags"
      ],
      "groupName": "Terragrunt module bumps",
      "schedule": [
        "before 5am on monday"
      ]
    }
  ]
}
